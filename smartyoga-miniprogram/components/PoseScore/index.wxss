/* components/PoseScore/index.wxss */
.pose-score {
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1), 0 2rpx 8rpx rgba(0,0,0,0.06);
  margin: 16rpx;
  position: relative;
  overflow: hidden;
}

/* 装饰背景 */
.pose-score::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(79, 70, 229, 0.03) 0%, transparent 70%);
  pointer-events: none;
  z-index: 0;
}

.pose-score > * {
  position: relative;
  z-index: 1;
}

/* 暗色模式 */
.pose-score.dark {
  background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
  color: #f7fafc;
}

.pose-score.dark::before {
  background: radial-gradient(circle, rgba(129, 140, 248, 0.05) 0%, transparent 70%);
}

/* Canvas 容器 */
.canvas-container {
  position: relative;
  align-self: center;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.15);
}

.canvas {
  display: block;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border: 3rpx solid #e2e8f0;
  border-radius: 20rpx;
}

.dark .canvas {
  background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
  border-color: #4a5568;
}

/* Canvas 遮罩层 */
.canvas-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.keypoint-stats {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-item {
  background: rgba(0,0,0,0.7);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
}

/* 加载状态 */
.canvas-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e2e8f0;
  border-top: 6rpx solid #4f46e5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #4f46e5;
  font-weight: 500;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

/* 错误状态 */
.canvas-error {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.canvas-error:active {
  transform: scale(0.98);
}

.error-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.error-text {
  font-size: 26rpx;
  color: #e53e3e;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.retry-hint {
  font-size: 22rpx;
  color: #718096;
}

/* 分数区域 */
.score-section {
  margin-bottom: 32rpx;
}

.score-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.pose-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pose-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a202c;
  line-height: 1.2;
}

.dark .pose-name {
  color: #f7fafc;
}

.processing-time {
  font-size: 20rpx;
  color: #718096;
  font-weight: 500;
}

.score-badge {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  transform: translateY(0);
  transition: transform 0.3s ease;
}

.score-badge:active {
  transform: translateY(2rpx);
}

.score-badge.score-excellent {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.score-badge.score-good {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.score-badge.score-average {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.score-badge.score-poor {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.score-value {
  font-size: 32rpx;
  font-weight: 800;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.score-unit {
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(255,255,255,0.9);
}

/* 进度条 */
.progress-container {
  margin-bottom: 20rpx;
}

.progress-bg {
  position: relative;
  height: 16rpx;
  background: #e2e8f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.dark .progress-bg {
  background: #4a5568;
}

.progress-bar {
  height: 100%;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.progress-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.3) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.progress-bar.score-excellent {
  background: linear-gradient(90deg, #10b981 0%, #059669 100%);
}

.progress-bar.score-good {
  background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%);
}

.progress-bar.score-average {
  background: linear-gradient(90deg, #f59e0b 0%, #d97706 100%);
}

.progress-bar.score-poor {
  background: linear-gradient(90deg, #ef4444 0%, #dc2626 100%);
}

.progress-glow {
  position: absolute;
  top: -2rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  filter: blur(4rpx);
  transform: translateX(-50%);
  transition: left 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.progress-glow.score-excellent {
  background: #10b981;
  box-shadow: 0 0 12rpx #10b981;
}

.progress-glow.score-good {
  background: #3b82f6;
  box-shadow: 0 0 12rpx #3b82f6;
}

.progress-glow.score-average {
  background: #f59e0b;
  box-shadow: 0 0 12rpx #f59e0b;
}

.progress-glow.score-poor {
  background: #ef4444;
  box-shadow: 0 0 12rpx #ef4444;
}

.score-labels {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #64748b;
  font-weight: 500;
}

.label-center {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.score-description {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  text-align: center;
  padding: 16rpx;
  background: rgba(79, 70, 229, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(79, 70, 229, 0.1);
}

.dark .score-description {
  background: rgba(129, 140, 248, 0.1);
  border-color: rgba(129, 140, 248, 0.2);
}

.score-level-text {
  font-size: 26rpx;
  color: #4f46e5;
  font-weight: 600;
}

.dark .score-level-text {
  color: #818cf8;
}

.score-emoji {
  font-size: 32rpx;
  animation: bounce 1s ease-in-out;
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% { transform: translateY(0); }
  40%, 43% { transform: translateY(-8rpx); }
  70% { transform: translateY(-4rpx); }
  90% { transform: translateY(-2rpx); }
}

/* AI 建议区域 */
.advice-section {
  margin-bottom: 32rpx;
}

.advice-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.advice-icon {
  font-size: 28rpx;
}

.advice-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #4f46e5;
}

.dark .advice-title {
  color: #818cf8;
}

.advice-content {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #4f46e5;
  position: relative;
  overflow: hidden;
}

.advice-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(79, 70, 229, 0.03) 0%, transparent 100%);
  pointer-events: none;
}

.dark .advice-content {
  background: linear-gradient(135deg, #2d3748 0%, #374151 100%);
  border-left-color: #818cf8;
}

.advice-text {
  font-size: 28rpx;
  line-height: 1.7;
  color: #374151;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.dark .advice-text {
  color: #e2e8f0;
}

/* 详情区域 */
.details-section {
  border-top: 2rpx solid #e2e8f0;
  padding-top: 24rpx;
}

.dark .details-section {
  border-top-color: #4a5568;
}

.details-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  cursor: pointer;
  transition: all 0.3s ease;
}

.details-header:active {
  transform: scale(0.98);
}

.details-title-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.details-icon {
  font-size: 24rpx;
}

.details-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4b5563;
}

.dark .details-title {
  color: #d1d5db;
}

.details-toggle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: transform 0.3s ease;
}

.details-toggle.expanded {
  transform: rotate(180deg);
}

.toggle-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.toggle-arrow {
  font-size: 20rpx;
  color: #9ca3af;
  transition: transform 0.3s ease;
}

.details-content {
  animation: slideDown 0.3s ease-out;
  overflow: hidden;
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    max-height: 1000rpx;
    transform: translateY(0);
  }
}

.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.detail-item {
  background: #f8fafc;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.detail-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.dark .detail-item {
  background: #374151;
  border-color: #4a5568;
}

.detail-label {
  display: block;
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #374151;
}

.detail-value.score-excellent {
  color: #059669;
}

.detail-value.score-good {
  color: #2563eb;
}

.detail-value.score-average {
  color: #d97706;
}

.detail-value.score-poor {
  color: #dc2626;
}

.dark .detail-value {
  color: #f3f4f6;
}

/* 置信度分布 */
.confidence-distribution {
  margin-top: 24rpx;
}

.distribution-title {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.confidence-bars {
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
  height: 80rpx;
  padding: 8rpx;
  background: #f8fafc;
  border-radius: 8rpx;
  border: 1rpx solid #e2e8f0;
}

.dark .confidence-bars {
  background: #374151;
  border-color: #4a5568;
}

.confidence-bar {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: flex-end;
}

.confidence-fill {
  width: 100%;
  min-height: 8rpx;
  border-radius: 2rpx 2rpx 0 0;
  transition: height 0.5s ease;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.retry-button,
.export-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.retry-button {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.retry-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.4);
}

.export-button {
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.export-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.4);
}

.button-icon {
  font-size: 24rpx;
}

.button-text {
  font-size: 26rpx;
}