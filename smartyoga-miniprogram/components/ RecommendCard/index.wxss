/* ✅ CSS 变量定义 */
.recommend-card {
  --card-bg: #ffffff;
  --card-text: #333333;
  --card-text-secondary: #666666;
  --card-text-light: #888888;
  --card-shadow: rgba(0, 0, 0, 0.06);
  --primary-color: #1890ff;
}

/* ✅ 暗黑模式变量覆盖 */
.recommend-card--dark {
  --card-bg: #2d2d2d;
  --card-text: #f5f5f5;
  --card-text-secondary: #cccccc;
  --card-text-light: #aaaaaa;
  --card-shadow: rgba(255, 255, 255, 0.05);
  --primary-color: #40a9ff;
}

.recommend-card {
  position: relative;
  padding: 32rpx;
  margin: 16rpx 0;
  background: var(--card-bg);
  border-radius: 24rpx;
  box-shadow: 0 6rpx 16rpx var(--card-shadow);
  transition: all 0.3s ease;
  overflow: hidden;
}

.recommend-card:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 8rpx var(--card-shadow);
}

/* Loading 遮罩 */
.recommend-card__loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  border-radius: 24rpx;
}

.recommend-card--dark .recommend-card__loading {
  background: rgba(45, 45, 45, 0.8);
}

.loading-text {
  font-size: 28rpx;
  color: var(--card-text-secondary);
}

/* 头部布局 */
.recommend-card__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.title-area {
  flex: 1;
  display: flex;
  align-items: center;
  margin-right: 16rpx;
}

/* ✅ CSS 文本截断 */
.recommend-card__title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--card-text);
  line-height: 1.3;
  margin-right: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}

/* 分类标签 */
.recommend-card__category {
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  color: var(--card-text-secondary);
  white-space: nowrap;
  flex-shrink: 0;
}

/* 分类颜色 */
.category--restaurant { background: #fff7e6; color: #d4b106; }
.category--shopping { background: #f6ffed; color: #52c41a; }
.category--entertainment { background: #f0f5ff; color: #1890ff; }
.category--hotel { background: #fff1f0; color: #ff4d4f; }

.recommend-card--dark .category--restaurant { background: #2d2600; color: #fadb14; }
.recommend-card--dark .category--shopping { background: #162312; color: #73d13d; }
.recommend-card--dark .category--entertainment { background: #111d2c; color: #40a9ff; }
.recommend-card--dark .category--hotel { background: #2a1215; color: #ff7875; }

/* 副标题 */
.recommend-card__subtitle {
  font-size: 28rpx;
  color: var(--card-text-secondary);
  line-height: 1.4;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 底部信息栏 */
.recommend-card__footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.address-info {
  flex: 1;
  margin-right: 16rpx;
}

.recommend-card__address {
  font-size: 24rpx;
  color: var(--card-text-light);
  line-height: 1.3;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-card__distance {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* 评分显示 */
.simple-rating {
  font-size: 24rpx;
  color: #faad14;
  font-weight: 500;
  flex-shrink: 0;
}

/* 地图按钮 */
.btn-map {
  font-size: 24rpx !important;
  padding: 12rpx 24rpx !important;
  border-radius: 16rpx !important;
  min-width: auto !important;
  height: 48rpx;
  flex-shrink: 0;
}

/* ✅ 无障碍支持 */
@media (prefers-reduced-motion: reduce) {
  .recommend-card {
    transition: none;
  }
  
  .recommend-card:active {
    transform: none;
  }
}